{% extends 'base.html.twig' %}

{% block body %}
    <h1>Devis list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Civility</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Function</th>
                <th>Company</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Object</th>
                <th>Message</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for devi in devis %}
            <tr>
                <td><a href="{{ path('devis_show', { 'id': devi.id }) }}">{{ devi.id }}</a></td>
                <td>{{ devi.civility }}</td>
                <td>{{ devi.firstName }}</td>
                <td>{{ devi.lastName }}</td>
                <td>{{ devi.function }}</td>
                <td>{{ devi.company }}</td>
                <td>{{ devi.phone }}</td>
                <td>{{ devi.email }}</td>
                <td>{{ devi.object }}</td>
                <td>{{ devi.message }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('devis_show', { 'id': devi.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('devis_edit', { 'id': devi.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('devis_new') }}">Create a new devi</a>
        </li>
    </ul>
{% endblock %}
