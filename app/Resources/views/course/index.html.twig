{% extends 'base.html.twig' %}

{% block body %}
    <h1>Courses list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Simpledescription</th>
                <th>Description</th>
                <th>Price</th>
                <th>Learningobjectives</th>
                <th>Businessskills</th>
                <th>Program</th>
                <th>Concernedpublic</th>
                <th>Prerequisites</th>
                <th>Duration</th>
                <th>Date</th>
                <th>Code</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for course in courses %}
            <tr>
                <td><a href="{{ path('course_show', { 'id': course.id }) }}">{{ course.id }}</a></td>
                <td>{{ course.title }}</td>
                <td>{{ course.simpleDescription }}</td>
                <td>{{ course.description }}</td>
                <td>{{ course.price }}</td>
                <td>{{ course.learningObjectives }}</td>
                <td>{{ course.businessSkills }}</td>
                <td>{{ course.program }}</td>
                <td>{{ course.concernedPublic }}</td>
                <td>{{ course.prerequisites }}</td>
                <td>{{ course.duration }}</td>
                <td>{% if course.date %}{{ course.date|date('Y-m-d') }}{% endif %}</td>
                <td>{{ course.code }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('course_show', { 'id': course.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('course_edit', { 'id': course.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('course_new') }}">Create a new course</a>
        </li>
    </ul>
{% endblock %}
