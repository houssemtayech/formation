{% extends "FormationAppBundle::layout.html.twig" %}


{% block content %}

<div class="tt-topheading background-block" style="background-image:url(img/heading/heading.jpg);">
            <div class="container">
                <h2 class="tt-topheading-title c-h3"><span>{{ categorie.name }} </span></h2>
                <ul class="tt-breadcrumbs">

                </ul>
            </div>
</div>    

<div class="bg-1 tt-sidebar-right tt-overflow">
            <div class="container">
                <div class="row">
                    <div class="col-md-9">
                        <div class="tt-two-colors pright35">
                            <div class="empty-space marg-lg-b90 marg-sm-b50 marg-xs-b30"></div>
                            <div class="tt-searchbar-top">
                                {#
                                <form>
                                    <div class="tt-searchbar-form">
                                        <input type="text" required="" placeholder="Search Our Courses">
                                        <div class="tt-searchbar-submit">
                                            <i class="stroke-icon icon-Search"></i>
                                            <input type="submit" value="">
                                        </div>
                                    </div>
                                </form>
                                #}
                                <a class="tt-searchbar-view" href="#" data-view="grid"><i class="fa fa-th-large" aria-hidden="true"></i></a>
                                <a class="tt-searchbar-view active" href="#" data-view="list"><i class="fa fa-list" aria-hidden="true"></i></a>
                            </div>
                            <div class="tt-seachbar-content clearfix" data-view="list">
                            <!-- *************************************** -->
                            <!-- *************************************** -->
                            <!-- *************************************** -->
                            <!-- *************************************** -->
                            <!-- *************************************** -->
                            <!-- *************************************** -->
                            <!-- *************************************** -->
                            {% for course in courses %}
                                <div class="tt-seachbar-entry">
                                    <div class="tt-cours type-2">
                                        <a class="tt-cours-img custom-hover" href="{{ path('course_show', { 'id': course.id }) }}">
                                            <span class="tt-cours-pic background-block" style="background-image:url({{ asset('/uploads/images/' ~ course.brochure) }})"></span>
                                        </a>
                                        <div class="tt-cours-info">

                                            <a class="tt-cours-title c-h6" href="{{ path('course_show', { 'id': course.id }) }}">{{ course.title }}</a>
                                            <div class="simple-text size-4">
                                                <p>{{ course.simpleDescription }} ..... <a href="{{ path('course_show', { 'id': course.id }) }}"> En savoir plus</a></p>
                                            </div>
                                        </div>
                                        <div class="tt-cours-bottom clearfix">
                                            <div class="tt-cours-left">
                                                <a class="tt-cours-count" href="#"><i class="fa fa-user" aria-hidden="true"></i>215</a>
                                                <a class="tt-cours-count" href="#"><i class="fa fa-comments-o" aria-hidden="true"></i>08</a>
                                                <span class="tt-cours-rating">
                                                    <i class="fa fa-star" aria-hidden="true"></i>
                                                    <i class="fa fa-star" aria-hidden="true"></i>
                                                    <i class="fa fa-star" aria-hidden="true"></i>
                                                    <i class="fa fa-star" aria-hidden="true"></i>
                                                    <i class="fa fa-star" aria-hidden="true"></i>
                                                </span>
                                            </div>
                                            <div class="tt-cours-right">
                                                <div class="tt-cours-price">{{ course.price }} € </div>
                                            </div>
                                        </div>
                                    </div>                            
                                </div>
                             {% endfor %}   
                            </div>
                            <div class="empty-space marg-lg-b135 marg-md-b120 marg-sm-b50 marg-xs-b30"></div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="pleft20">
                            <div class="empty-space marg-lg-b90 marg-sm-b50 marg-xs-b30"></div>

                            <!-- TT-HEDING -->
                            <div class="tt-heding type-3">
                                <h5 class="tt-heding-title c-h5 txt-uppercase"><span><small>Domaines de formations</small></span></h5>
                            </div>
                            <div class="empty-space marg-lg-b10 marg-sm-b30"></div>

                            <!-- TT-SLIST -->
                            <ul class="tt-slist">
                                {% render (controller("FormationAppBundle:Categorie:layout")) %}

                                {% block categorieHeader %}
                                {% endblock %}
                            </ul>
                            <div class="empty-space marg-lg-b40 marg-sm-b60"></div>

                            <!-- TT-HEDING -->
                            <div class="tt-heding type-3">
                                <h5 class="tt-heding-title c-h5 txt-uppercase"><span><small>Formations à venir</small></span></h5>
                            </div>
                            <div class="empty-space marg-lg-b15 marg-sm-b30"></div>

                            <!-- TT-SCOURS -->
                            {% render (controller("FormationAppBundle:Course:widget")) %}

                            {% block widgetCourses %}
                            {% endblock %}

                            <!-- TT-HEDING -->


                            <!-- TT-HEDING -->

                             <div class="empty-space marg-lg-b10 marg-sm-b30"></div>

                            <!-- TT-CLOUD -->


                            <div class="empty-space marg-sm-b80 marg-xs-b60"></div> 

                        </div>                    

                    </div>
                </div>

                
            </div>                
        
        </div>    

{% endblock %}