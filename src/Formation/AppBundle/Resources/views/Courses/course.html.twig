{% extends "FormationAppBundle::layout.html.twig" %}


{% block content %}



    <div class="bg-1 tt-sidebar-right tt-overflow">
        <div class="container">
            <div class="row">
                <div class="col-md-9">
                    <div class="tt-two-colors pright35">
                        <div class="empty-space marg-lg-b90 marg-sm-b50 marg-xs-b30"></div>

                        <!-- TT-HEDING -->
                        <div class="tt-heding type-2">
                            <h2 class="tt-heding-title c-h4 txt-uppercase"><span>{{ course.title }}</span></h2>
                        </div>
                        <div class="empty-space marg-lg-b25"></div>

                        <div class="simple-text size-4 color-3">
                            <p>{{ course.simpleDescription }}</p>
                        </div>
                        <div class="empty-space marg-lg-b50"></div>

                        <div class="tt-simple-image-2">
                           {# <img class="img-responsive" src="{{ asset('/uploads/images/' ~ course.brochure) }}" height="376" width="850" alt=""> #}
                        </div>
                        <div class="empty-space marg-lg-b10"></div>

                        <!-- TT-AUTHOR -->
                        <div class="tt-author">

                            <div class="tt-author-avacell">
                                <div class="tt-author-label">Domaine : </div>
                                <div class="tt-author-tags">
                                    <a href="#">{{ course.idCategorie|upper }}</a>
                                </div>
                            </div>

                            <div class="tt-author-pricecell">
                                {{ course.price }} €
                            </div>
                        </div>
                        <div class="empty-space marg-lg-b30"></div>

                        <a class="c-btn type-1 size-3 color-2" href="{{ path('inscription_new', { 'id': course.id }) }}"><span>S'inscrire<i class="fa fa-arrow-right" aria-hidden="true"></i></span></a>
                        <div class="empty-space marg-lg-b85 marg-sm-b50 marg-xs-b30"></div>

                        <!-- TT-HEDING -->
                        <div class="tt-heding type-2">
                            <h2 class="tt-heding-title c-h4 txt-uppercase"><span>Programme de formation</span></h2>
                        </div>
                        <div class="empty-space marg-lg-b20"></div>

                        <div class="simple-text size-4 color-3">
                            <p>{{ course.description | raw }}</p>
                        </div>
                        <div class="empty-space marg-lg-b35 marg-sm-b30"></div>

                        <!-- TT-HEDING -->
                        <div class="tt-heding type-3">
                            <h5 class="tt-heding-title c-h5 txt-uppercase"><span><small>Objectifs</small></span></h5>
                        </div>
                        <div class="empty-space marg-lg-b20"></div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="simple-text size-4 color-3">
                                    <h6 class="tt-heding-title c-h5 txt-uppercase"><span><small>Objectifs pédagogiques</small></span></h6>

                                    <p>{{ course.learningObjectives | raw }}</p>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="simple-text size-4 color-3">
                                    <h6 class="tt-heding-title c-h5 txt-uppercase"><span><small>Compétences métier</small></span></h6>
                                    <p>{{ course.businessSkills | raw }}</p>
                                </div>
                            </div>
                        </div>
                        <div class="empty-space marg-lg-b35 marg-sm-b30"></div>

                        <!-- TT-HEDING -->
                        <div class="tt-heding type-3">
                            <h5 class="tt-heding-title c-h5 txt-uppercase"><span><small>Programme</small></span></h5>
                        </div>
                        <div class="empty-space marg-lg-b20"></div>
                        <div class="simple-text size-4 color-3">
                            <p>{{ course.program | raw }}</p>
                        </div>
                        <div class="empty-space marg-lg-b80 marg-sm-b50 marg-xs-b30"></div>

                        <div class="tt-heding type-3">
                            <h5 class="tt-heding-title c-h5 txt-uppercase"><span><small>Public</small></span></h5>
                        </div>
                        <div class="empty-space marg-lg-b20"></div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="simple-text size-4 color-3">
                                    <h6 class="tt-heding-title c-h5 txt-uppercase"><span><small>Public concerné</small></span></h6>
                                    <p>{{ course.concernedPublic | raw }}</p>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="simple-text size-4 color-3">
                                    <h6 class="tt-heding-title c-h5 txt-uppercase"><span><small>Prérequis</small></span></h6>
                                    <p>{{ course.prerequisites | raw }}</p>
                                </div>
                            </div>
                        </div>


                        <div class="empty-space marg-lg-b135 marg-md-b120 marg-sm-b50 marg-xs-b30"></div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="pleft20">
                        <div class="empty-space marg-lg-b90 marg-sm-b50 marg-xs-b30"></div>

                        {% if is_granted("ROLE_USER") %}
                        <div class="tt-heding type-3">
                            {{ form_start(delete_form) }}

                            <input type="submit" value="Supprimer" class="c-btn type-1 size-3 color-2">

                            {{ form_end(delete_form) }}
                            <div class="empty-space marg-lg-b90 marg-sm-b50 marg-xs-b30"></div>
                        </div>
                        {% endif %}


                        <div class="row">
                            <div class="col-sm-12">

                                <ul  class="nav nav-tabs nav-tabs-horizontal">
                                    <li ><a href="#htab1" data-toggle="tab" class="tt-feature-label"><h4 >INTER</h4></a></li>
                                    <li ><a href="#htab2" data-toggle="tab" class="tt-feature-label "><h4 >INTRA</h4></a></li>

                                </ul>
                                <div class="tab-content">
                                    <div role="tabpanel" class="tab-pane fade in active" id="htab1">
                                        <div class="tt-feature">

                                            <ul class="tt-feature-list">
                                                <li>
                                                    <div class="tt-feature-left">Date</div>
                                                    <div class="tt-feature-right">{% if course.date %}{{ course.date|date('d/m/Y') }}{% endif %}</div>
                                                </li>

                                                <li>
                                                    <div class="tt-feature-left">Durée</div>
                                                    <div class="tt-feature-right">{{ course.duration }} jours ({{ course.duration*7 }} heures)</div>
                                                </li>

                                                <li>
                                                    <div class="tt-feature-left">Référence </div>
                                                    <div class="tt-feature-right">{{ course.code }}</div>
                                                </li>
                                                <li>
                                                    <div class="tt-feature-left">Prix </div>
                                                    <div class="tt-feature-right">{{ course.price }} €</div>
                                                </li>
                                                <li>
                                                    <div class="tt-feature-left">Forfait repas </div>
                                                    <div class="tt-feature-right">{{ course.repa }} €</div>
                                                </li>


                                            </ul>
                                        </div>
                                    </div>
                                    <div role="tabpanel" class="tab-pane fade " id="htab2">
                                        <div class="tt-feature">

                                            <ul class="tt-feature-list">

                                                <li>
                                                    <div class="tt-feature-left">Durée</div>
                                                    <div class="tt-feature-right">{{ course.duration }} jours ({{ course.duration*7 }} heures)</div>
                                                </li>

                                                <li>
                                                    <div class="tt-feature-left">Référence</div>
                                                    <div class="tt-feature-right">{{ course.code }}</div>
                                                </li>
                                                <li>
                                                    <div class="tt-feature-left">Forfait intra* </div>
                                                    <div class="tt-feature-right">{{ course.forfaitIntra }}</div>
                                                </li>

                                                <li>
                                                    <div class="" style="margin-left: 30px">* prix pour un groupe de 12 personnes max. </div>

                                                </li>

                                            </ul>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <div class="empty-space marg-lg-b30"></div>
                        <!-- TT-FEATURE -->


                        <div class="empty-space marg-lg-b30"></div>

                        <!-- TT-HEDING -->
                        <div class="tt-heding type-3">
                            <h5 class="tt-heding-title c-h5 txt-uppercase"><span><small>Nos domaines de formations</small></span></h5>
                        </div>
                        <div class="empty-space marg-lg-b10 marg-sm-b30"></div>

                        <!-- TT-SLIST -->
                        <ul class="tt-slist">
                            {% render (controller("FormationAppBundle:Categorie:layout")) %}

                            {% block categorieHeader %}
                            {% endblock %}
                        </ul>
                        <div class="empty-space marg-lg-b40 marg-sm-b60"></div>

                        <!-- TT-HEDING -->
                        <div class="tt-heding type-3">
                            <h5 class="tt-heding-title c-h5 txt-uppercase"><span><small>Formations à venir</small></span></h5>
                        </div>
                        <div class="empty-space marg-lg-b15 marg-sm-b30"></div>

                        <!-- TT-SCOURS -->
                        {% render (controller("FormationAppBundle:Course:widget")) %}

                        {% block widgetCourses %}
                        {% endblock %}
                        <div class="empty-space marg-lg-b40 marg-sm-b60"></div>



                        <!-- TT-HEDING -->
                        <div class="tt-heding type-3">
                            <h5 class="tt-heding-title c-h5 txt-uppercase"><span><small>tag clouds</small></span></h5>
                        </div>
                        <div class="empty-space marg-lg-b10 marg-sm-b30"></div>
                        <div class="empty-space marg-lg-b30"></div>

                        <!-- TT-CLOUD -->
                        <ul class="tt-cloud-wrapper">
                            {% for tag in tagss %}
                            <li><a class="tt-cloud" href="#">{{ tag }}</a></li>
                            {% endfor %}
                        </ul>

                        <div class="empty-space marg-sm-b80 marg-xs-b60"></div>

                    </div>

                </div>
            </div>


        </div>

    </div>

{% endblock %}