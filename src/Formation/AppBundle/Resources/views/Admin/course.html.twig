{% extends "FormationAppBundle::adminLayout.html.twig" %}


{% block content1 %}

    <div class="widget box">
        <a class="btn btn-primary" href="{{ path('course_new') }}">Ajouter une formation</a>
    </div>

    <div class="widget box">
        <div class="widget-header">
            <h4><i class="icon-reorder"></i> Liste des domaines de formation </h4>
            <div class="toolbar no-padding">
                <div class="btn-group">
                    <span class="btn btn-xs widget-collapse"><i class="icon-angle-down"></i></span>
                </div>
            </div>
        </div>
        <div class="widget-content no-padding">
            <table class="table table-striped table-bordered table-hover table-checkable table-responsive datatable">
                <thead>
                <tr>

                    <th data-class="expand">Formation</th>
                    <th>Date</th>
                    <th>Action</th>

                </tr>
                </thead>
                <tbody>
                {% for course in courses %}
                    <tr>

                        <td>{{ course.title }}</td>
                        <td>{% if course.date %}{{ course.date|date('Y-m-d') }}{% endif %}</td>
                        <td class="align-center">
                        <span class="btn-group">
							<a href="{{ path('course_show', { 'id': course.id }) }}" class="bs-tooltip" title="Consulter" class="btn btn-xs"><i class="icon-search"></i></a>
							<a href="javascript:void(0);" class="bs-tooltip" title="Modifier" class="btn btn-xs"><i class="icon-pencil"></i></a>

						</span>
                        </td>
                    </tr>
                {% endfor %}

                </tbody>
            </table>
        </div>
    </div>


{% endblock %}