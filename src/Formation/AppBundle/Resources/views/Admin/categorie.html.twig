{% extends "FormationAppBundle::adminLayout.html.twig" %}


{% block content1 %}

    <div class="widget box">
        <a class="btn btn-primary" href="{{ path('categorie_new') }}">Ajouter un domaine de formation</a>
    </div>

    <div class="widget box">
        <div class="widget-header">
            <h4><i class="icon-reorder"></i> Liste des domaines de formation </h4>
            <div class="toolbar no-padding">
                <div class="btn-group">
                    <span class="btn btn-xs widget-collapse"><i class="icon-angle-down"></i></span>
                </div>
            </div>
        </div>
        <div class="widget-content no-padding">
            <table class="table table-striped table-bordered table-hover table-checkable table-responsive datatable">
                <thead>
                <tr>

                    <th data-class="expand">Domaine de formation</th>
                    <th>Action</th>

                </tr>
                </thead>
                <tbody>
                {% for categorie in categories %}
                <tr>

                    <td>{{ categorie.name }}</td>
                    <td class="align-center">
                        <span class="btn-group">

							<a href="{{ path('categorie_edit', { 'id': categorie.id }) }}" class="bs-tooltip" title="Modifier" class="btn btn-xs"><i class="icon-pencil"></i></a>

						</span>
                    </td>
                </tr>
                 {% endfor %}

                </tbody>
            </table>
        </div>
    </div>


{% endblock %}