{% extends "FormationAppBundle::adminLayout.html.twig" %}


{% block content1 %}

    <div class="widget box">
        <div class="widget-header">
            <h4><i class="icon-reorder"></i> Derniers messages reçus </h4>
            <div class="toolbar no-padding">
                <div class="btn-group">
                    <span class="btn btn-xs widget-collapse"><i class="icon-angle-down"></i></span>
                </div>
            </div>
        </div>
        <div class="widget-content no-padding">
            <table class="table table-striped table-bordered table-hover table-checkable table-responsive datatable">
                <thead>
                <tr>

                    <th data-class="expand">Nom et prénom</th>
                    <th>Email</th>
                    <th>Consulter</th>


                </tr>
                </thead>
                <tbody>
                {% for dev in devis %}
                    <tr>

                        <td class="align-center">{{ dev.firstName }} {{ dev.lastName }}</td>
                        <td class="align-center">{{ dev.email }}</td>
                        <td class="align-center">
                        <span class="btn-group">

							<a href="{{ path('devis_show', { 'id': dev.id }) }}" class="bs-tooltip" title="Afficher" class="btn btn-xs"><i class="icon-search"></i></a>

						</span>
                        </td>
                    </tr>
                {% endfor %}

                </tbody>
            </table>
        </div>
    </div>

{% endblock %}