{% block indexCourses %}

    <div class="container">
        <div class="empty-space marg-lg-b80 marg-sm-b50 marg-xs-b30"></div>

        <!-- TT-HEDING -->
        <div class="tt-heding type-2">
            <h2 class="tt-heding-title c-h4 txt-uppercase"><span>Nos formations à venir</span></h2>
            <div class="tt-heding-desc">Montez en compétences</div>
        </div>
        <div class="empty-space marg-lg-b40 marg-sm-b30"></div>

        <!-- TT-COURS -->
        <div class="row">
            {% for course in cour1|slice(0, 4) %}
                <div class="col-sm-6 col-md-3">
                <div class="tt-cours">
                    <a class="tt-cours-img custom-hover" href="{{ path('course_show', { 'id': course.id }) }}">
                        <img class="img-responsive" src="{{ asset('/uploads/images/' ~ course.brochure) }}" height="260" width="270" alt="">
                    </a>
                    <div class="tt-cours-info">

                        <a class="tt-cours-title c-h6" href="{{ path('course_show', { 'id': course.id }) }}">{{ course.title }}</a>
                    </div>
                    <div class="tt-cours-bottom clearfix">
                        <div class="tt-cours-left">

                        </div>
                        <div class="tt-cours-right">
                            <div class="tt-cours-price">{{ course.price }} € </div>
                        </div>
                    </div>
                </div>
                <div class="empty-space marg-sm-b30"></div>
            </div>
            {% endfor %}

        </div>
        <div class="empty-space marg-lg-b30"></div>

        <div class="empty-space marg-lg-b105 marg-sm-b50 marg-xs-b30"></div>
    </div>


{% endblock %}